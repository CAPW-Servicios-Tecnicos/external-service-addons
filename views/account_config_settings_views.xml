<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_account_config_settings_inherited" model="ir.ui.view">
            <field name="name">view.account.config.settings.inherited</field>
            <field name="model">account.config.settings</field>
            <field name="inherit_id" ref="account.view_account_config_settings"/>
            <field name="arch" type="xml">
                <div name="group_multi_currency" position="after">
                    <label for="id" string="Dominican Banks Rates"
                           attrs="{'invisible': [('group_multi_currency', '!=', True)]}"/>
                    <div attrs="{'invisible': [('group_multi_currency', '!=', True)]}">
                        <div>
                            <label for="l10n_do_currency_interval_unit"/>
                            <field name="l10n_do_currency_interval_unit" class="oe_inline"/>
                            <button string="Update Now"
                                name="l10n_do_update_currency_rates"
                                type="object"
                                class="oe_link"/>
                        </div>
                        <div>
                            <label for="currency_base"/>
                            <field name="currency_base" class="oe_inline"/>
                        </div>
                        <div>
                            <label for="l10n_do_currency_next_execution_date"/>
                            <field name="l10n_do_currency_next_execution_date" class="oe_inline"/>
                        </div>
                        <div>
                            <label for="l10n_do_currency_provider"/>
                            <field name="l10n_do_currency_provider" class="oe_inline"/>
                        </div>
                    </div>
                </div>
            </field>
        </record>

    </data>
</odoo>