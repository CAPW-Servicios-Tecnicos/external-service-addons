<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <record id="res_company_currency_hash_wizard_form" model="ir.ui.view">
            <field name="name">res.company.currency.hash.wizard.form</field>
            <field name="model">res.company.hash.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <field name="hash_ids">
                        <tree editable="bottom" create="false" delete="false">
                            <field name="company_id" invisible="1"/>
                            <field name="name" readonly="1" string="Name"/>
                            <field name="hash" password="True" required="1"/>
                        </tree>
                    </field>
                    <footer>
                        <button string='Save' name="set_company_hash" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="res_company_currency_hash_wizard_action"
                    name="Set hash"
                    res_model="res.company.hash.wizard"
                    src_model="res.company"
                    view_mode="form"
                    multi="True"
                    target="new"
                    groups="account.group_account_manager"
                    key2="client_action_multi"/>
        
    </data>
</odoo>