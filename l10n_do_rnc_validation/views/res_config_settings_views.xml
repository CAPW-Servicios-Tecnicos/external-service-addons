<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l10n_do_external_validation_rnc_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">l10n.do.external.validation.rnc.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="1000"/>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='general_settings']" position="inside">
                <h2>l10n_do config</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_can_validate_rnc"/>
                        </div>

                        <div class="o_setting_right_pane" id="module_can_validate_rnc">
                            <label string="Validate RNC/Cedula" for="module_can_validate_rnc"/>
                            <div class="text-muted">
                                When creating a new res.partner call api of indexa.do, to corroborate the data of the RNC entered
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
